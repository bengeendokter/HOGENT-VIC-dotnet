<PageTitle>@Title</PageTitle>

<div class="content">
    <UsageStats display=@Display/>
    <div class="main_content">
        @if (@Content != null)
        {
            @Content
        }
    </div>
</div>

@code {
    [Parameter]
    public bool Display { get; set; }
    [Parameter]
    public string? Title { get; set; }
    [Parameter]
    public RenderFragment Content { get; set; }

}
