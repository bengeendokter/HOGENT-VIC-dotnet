<div class="navbar">
    <div class="icon-hamburger-div">
        <NavLink aria-label="Startscherm" href="/">
            <HoGentLogo />
        </NavLink>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            @if(disappearOptions){
                <HamburgerIcon />
                
            } else {
                <CloseIcon />
            }
        </button>
    </div>
    <div class="nav_options @NavVisibleCss" @onclick="ToggleNavMenu">
        @*
        ########## Om link te maken met andere pagina vervang "/" met "/*pagina_naam*" ##########
        *@
            <AuthorizeView Roles="Administrator">
                <NavLink href="/gebruikers" class="nav_link" Match=NavLinkMatch.All>
                    <div>Gebruikers</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Moderator, Administrator">
                <NavLink href="/klanten" class="nav_link" Match=NavLinkMatch.All>
                    <div>Klanten</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Moderator, Administrator">
                <NavLink href="/vm" class="nav_link" Match=NavLinkMatch.All>
                    <div>Virtuele Machines</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Customer">
                <NavLink href="/mijn_vms" class="nav_link" Match=NavLinkMatch.All>
                    <div>Mijn VMs</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Moderator, Administrator">
                <NavLink href="/vm/request/list" class="nav_link" Match=NavLinkMatch.All>
                    <div>Aanvragen</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Customer">
                <NavLink href="/mijn_aanvragen" class="nav_link" Match=NavLinkMatch.All>
                    <div>Mijn Aanvragen</div>
                </NavLink>
            </AuthorizeView>
            <AuthorizeView Roles="Moderator, Administrator">
                <NavLink href="/historiek" class="nav_link" Match=NavLinkMatch.All>
                    <div>Historiek</div>
                </NavLink>
            </AuthorizeView>
            <Client.AuthShared.AccessControl />
    </div>
</div>

@code {
    private bool disappearOptions = true;

    private string? NavVisibleCss => disappearOptions ? "gone" : null;

    private void ToggleNavMenu()
    {
        disappearOptions = !disappearOptions;
    }
}
